<main class="container">
    <div class="header">
    <h1>Liste des clients</h1>
    </div>
    <br>
    <br>
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <% if @customers.any? %>
          <div class="list-group">
            <% @customers.each do |customer| %>
                <%= link_to customer.first_name + " " + customer.last_name, session_sign_in_path(customer), 
                    class:"list-group-item list-group-item-action",
                    style: "border-color: #5a5a5a;border-width: thin"%>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= button_to "Je ne me trouve pas dans la liste", new_customer_path %>
      </div>
    </div>
    
  </main>
